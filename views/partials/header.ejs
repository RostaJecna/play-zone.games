<header class="font-poppins shadow-md select-none xyz-in" xyz="duration-6 ease-out-back fade-100% up-5">
        <nav class="font-body mx-auto max-w-screen-xl items-center justify-between p-2 z-10 pr-4 md:flex">
            <div class="flex justify-between">
                <div class="logo flex items-center gap-1">
                    <img class="drop-shadow-lg" id="myIcon" src="img/logo.svg" alt="logo.svg" width="40px" />
                    <a class="text-3xl font-semibold bg-clip-text text-transparent bg-azure cursor-pointer" href="/">PlayZone</a>
                </div>
                <div class="flex items-center md:hidden">
                    <a id="navbar-toggle" class="cursor-pointer flex items-center"><span></span></a>
                </div>
            </div>
            <ul class="hidden md:flex gap-4">
                <li><a class="<%= currentPage === 'index' ? 'active-header-a-tag' : 'hover:text-tertiary' %>" href="/">Home</a></li>
                <li><p class="w-fit cursor-not-allowed hover:text-gray-500" id="store-link">Store</p></li>
                <li><a class="<%= currentPage === 'chat' ? 'active-header-a-tag' : 'hover:text-tertiary' %>" href="/chat">Chat</a></li>
                <li><a class="<%= currentPage === 'about-us' ? 'active-header-a-tag' : 'hover:text-tertiary' %>" href="/about-us">About Us</a></li>
            </ul>
            <div class="hidden md:block space-x-2">
                <a class="font-bold <%= currentPage === 'login' ? 'active-header-login' : 'hover:text-primary cursor-pointer'%>" href="/login">Log In</a>
                <button class="relative inline-flex items-center justify-center p-0.5 text-sm font-bold bg-azure text-gray-900 hover:text-white focus:outline-none focus:ring-4 focus:ring-green-200 group group-hover:from-primary group-hover:to-secondary rounded-lg">
                    <span class="<%= currentPage === 'signup' ? 'text-white' : 'bg-white group-hover:bg-opacity-0 group-hover:text-white'%> relative rounded-md text-lg px-2 py-0.5 text-secondary transition-all duration-75 ease-in"><a href="/signup">Sign Up</a></span>
                </button>
            </div>
        </nav>
        <div class="hidden bg-white absolute right-0 md:hidden m-2 p-6 rounded-lg shadow-md xyz-in" id="navbar-items" xyz="small-100% origin-top-right">
            <ul class="space-y-1">
                <li><a class="<%= currentPage === 'index' ? 'active-header-a-tag' : 'hover:text-tertiary' %>" href="/">Home</a></li>
                <li><p class="w-fit cursor-not-allowed hover:text-gray-500" id="store-link">Store</p></li>
                <li><a class="<%= currentPage === 'chat' ? 'active-header-a-tag' : 'hover:text-tertiary' %>" href="/chat">Chat</a></li>
                <li><a class="<%= currentPage === 'about-us' ? 'active-header-a-tag' : 'hover:text-tertiary' %>" href="/about-us">About Us</a></li>
            </ul>
            <div class="mt-2 space-x-2">
                <a class="font-bold <%= currentPage === 'login' ? 'active-header-login' : 'hover:text-primary cursor-pointer'%>" href="/login">Log In</a>
                <button class="relative inline-flex items-center justify-center p-0.5 text-sm font-bold bg-azure text-gray-900 hover:text-white focus:outline-none focus:ring-4 focus:ring-green-200 group group-hover:from-primary group-hover:to-secondary rounded-lg">
                    <span class="<%= currentPage === 'signup' ? 'text-white' : 'bg-white group-hover:bg-opacity-0 group-hover:text-white'%> relative rounded-md text-lg px-2 py-0.5 text-secondary transition-all duration-75 ease-in"><a href="/signup">Sign Up</a></span>
                </button>
            </div>
        </div>
</header>